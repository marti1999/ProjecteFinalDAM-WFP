<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:desktopapplication"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:View="clr-namespace:desktopapplication.View"  
        xmlns:wpfx="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:ViewModel="clr-namespace:desktopapplication.ViewModel"
        xmlns:p="clr-namespace:desktopapplication.Properties"
        x:Class="desktopapplication.MainWindow"
        mc:Ignorable="d"

        Title="MainWindow" Height="600" Width="1080" Foreground="White" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Storyboard x:Key="OpenMenu">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Width)" Storyboard.TargetName="panelLeft">
                <EasingDoubleKeyFrame KeyTime="0" Value="57"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.25" Value="170"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="CloseMenu">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Width)" Storyboard.TargetName="panelLeft">
                <EasingDoubleKeyFrame KeyTime="0" Value="170"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.25" Value="57"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter" />

    </Window.Resources>
    <Window.Triggers>
        <EventTrigger RoutedEvent="ButtonBase.Click" SourceName="ButtonOpenMenu">
            <BeginStoryboard Storyboard="{StaticResource OpenMenu}"/>
        </EventTrigger>
        <EventTrigger RoutedEvent="ButtonBase.Click" SourceName="ButtonCloseMenu">
            <BeginStoryboard Storyboard="{StaticResource CloseMenu}"/>
        </EventTrigger>
    </Window.Triggers>

    <Window.DataContext>
        <ViewModel:Vista1ViewModel/>
    </Window.DataContext>



    <Grid>
        <Grid x:Name="GridMain" HorizontalAlignment="Right" VerticalAlignment="Bottom" Height="509" Width="1015">
            <TabControl  TabStripPlacement="Top" SelectedIndex="{Binding SelectedTab}" Height="509" VerticalAlignment="Top" HorizontalAlignment="Left" Width="1015"  >
                <TabItem Header="Donors" >
                    <Grid Background="#FFE5E5E5" HorizontalAlignment="Left" Width="953" Margin="28,0,0,-22" Height="503" VerticalAlignment="Top"  >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid>
                            <DataGrid CanUserAddRows="False" AutoGenerateColumns="False" HorizontalAlignment="Left" Height="272" Margin="10,62,0,0" VerticalAlignment="Top" Width="404" ItemsSource="{Binding Users}">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Binding="{Binding Id}" ClipboardContentBinding="{x:Null}" Header="Id" Width="*"/>
                                    <DataGridTextColumn Binding="{Binding dni}" ClipboardContentBinding="{x:Null}" Header="DNI" Width="*"/>
                                    <DataGridTextColumn Binding="{Binding name}" ClipboardContentBinding="{x:Null}" Header="Name" Width="*"/>
                                    <DataGridTextColumn Binding="{Binding lastName}" ClipboardContentBinding="{x:Null}" Header="Last Name" Width="*"/>
                                    <DataGridTextColumn Binding="{Binding email}" ClipboardContentBinding="{x:Null}" Header="Email" Width="*"/>
                                    <DataGridTextColumn Binding="{Binding ammountGiven}" ClipboardContentBinding="{x:Null}" Header="Amount given" Width="*"/>
                                    <DataGridCheckBoxColumn Binding="{Binding active}" ClipboardContentBinding="{x:Null}" Header="Active" Width="*"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                        <Grid Grid.Column="1" >

                        </Grid>

                    </Grid>
                </TabItem>
                <TabItem Header="Requestor">

                    <Grid Background="#FFE5E5E5"  >

                        <DataGrid HorizontalAlignment="Left" Height="329" Margin="68,52,0,0" VerticalAlignment="Top" Width="614" ItemsSource="{Binding Requestors}" IsReadOnly="True" AutoGenerateColumns="False" SelectedItem="{Binding SelectedRequestor}" SelectedIndex="{Binding SelectedRequestorIndex}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Binding="{Binding Id}" ClipboardContentBinding="{x:Null}" Header="Id"/>
                                <DataGridTextColumn Binding="{Binding dni}" ClipboardContentBinding="{x:Null}" Header="DNI" Width="*"/>
                                <DataGridTextColumn Binding="{Binding name}" ClipboardContentBinding="{x:Null}" Header="Name" Width="*"/>
                                <DataGridTextColumn Binding="{Binding lastName}" ClipboardContentBinding="{x:Null}" Header="LastName" Width="*"/>
                                <DataGridTextColumn Binding="{Binding active}" ClipboardContentBinding="{x:Null}" Header="Active" Width="*"/>
                                <DataGridTextColumn Binding="{Binding email}" ClipboardContentBinding="{x:Null}" Header="Email" Width="*"/>
                                <DataGridTextColumn Binding="{Binding MaxClaim.value}" ClipboardContentBinding="{x:Null}" Header="MaxClaims"/>
                                <DataGridTextColumn Binding="{Binding dateCreated}" ClipboardContentBinding="{x:Null}" Header="DateCreated" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        <Button Content="Deny" HorizontalAlignment="Left" Margin="692,308,0,0" VerticalAlignment="Top" Command="{Binding DenyRequestorChecked}" Width="76"/>
                        <Button HorizontalAlignment="Left" Margin="692,308,0,0" VerticalAlignment="Top" Command="{Binding DenyRequestorChecked}" Width="76">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Close" Height="25" Width="25" Margin="0"/>
                                
                            </StackPanel>
                        </Button>
                        <Button Content="Accept" HorizontalAlignment="Left" Margin="692,349,0,0" VerticalAlignment="Top" Command="{Binding AcceptRequestorChecked}"/>

                    </Grid>
                </TabItem>
                <TabItem Header="Clothes" >
                    <Grid Background="#FFE5E5E5"  >
                        <ComboBox Name="classification" HorizontalAlignment="Left" Margin="556,76,0,0" VerticalAlignment="Top" Width="120"
                                  materialDesign:HintAssist.Hint="Classification"
                                  Style="{StaticResource MaterialDesignFloatingHintComboBox}" ItemsSource="{Binding ClothesClassification}" SelectedItem="{Binding ClothesClassificationSelected}" />
                        <ComboBox Name="size" HorizontalAlignment="Left" Margin="712,76,0,0" VerticalAlignment="Top" Width="94" materialDesign:HintAssist.Hint="Size"
                                  Style="{StaticResource MaterialDesignFloatingHintComboBox}"/>
                        <Button  HorizontalAlignment="Left" Margin="556,148,0,0" VerticalAlignment="Top" Height="34" Background="SlateGray" BorderBrush="#FF596673">
                            <StackPanel Orientation="Horizontal"  >
                                <materialDesign:PackIcon Kind="GenderFemale" Height="25" Width="25" Margin="0"/>
                            </StackPanel>
                        </Button>
                        <Button  HorizontalAlignment="Left" Margin="654,148,0,0" VerticalAlignment="Top" Height="34" Background="SlateGray" BorderBrush="#FF596673">
                            <StackPanel Orientation="Horizontal"  >
                                <materialDesign:PackIcon Kind="GenderMale" Height="25" Width="25" Margin="0"></materialDesign:PackIcon>
                            </StackPanel>
                        </Button>
                        <Button  HorizontalAlignment="Left" Margin="749,148,0,0" VerticalAlignment="Top" Height="34" Background="SlateGray" BorderBrush="#FF596673">
                            <StackPanel Orientation="Horizontal"  >
                                <materialDesign:PackIcon Kind="GenderMaleFemale" Height="25" Width="25" Margin="0"/>
                            </StackPanel>
                        </Button>


                        <wpfx:ColorPicker Name="ColorPicker1" DisplayColorAndName="false" Margin="556,212,203,238"   StandardColors="{Binding ColorList}" AvailableColors="{Binding ColorList}" ShowStandardColors="False" AdvancedButtonHeader="" ShowAdvancedButton="False" SelectedColor="{Binding SelectedColorRaw}"/>
                        <ComboBox HorizontalAlignment="Left" Margin="561,275,0,0" VerticalAlignment="Top" Width="245"
                                  materialDesign:HintAssist.Hint="Donor:"
                                  Style="{StaticResource MaterialDesignFloatingHintComboBox}">
                            <ComboBoxItem>
                                Android
                            </ComboBoxItem>
                            <ComboBoxItem>
                                iOS
                            </ComboBoxItem>
                            <ComboBoxItem>
                                Linux
                            </ComboBoxItem>
                            <ComboBoxItem>
                                Windows
                            </ComboBoxItem>
                        </ComboBox>
                        <Button HorizontalAlignment="Left" Margin="563,350,0,0" VerticalAlignment="Top" Width="243" Command="{Binding createClothCommand}" Height="39"
                                Content="Register cloth"
                                Background="#596673" BorderBrush="#596673">

                        </Button>


                    </Grid>
                </TabItem>
                <TabItem Header="Announcements" >
                    <Grid Background="#FFE5E5E5"  >



                        <DataGrid CanUserAddRows="False" AutoGenerateColumns="False" HorizontalAlignment="Left" Height="272" Margin="10,62,0,0"
                                  VerticalAlignment="Top" Width="404" ItemsSource="{Binding Announcements}"
                                    materialDesign:DataGridAssist.CellPadding="13 8 8 8"
  materialDesign:DataGridAssist.ColumnHeaderPadding="8">
                            <DataGrid.Columns>

                                <DataGridTextColumn Binding="{Binding title}"  Header="Title" Width="*"/>
                                <DataGridTextColumn Binding="{Binding message}" Header="Message" Width="*"/>
                                <DataGridTextColumn Binding="{Binding dateCreated.Date.Date}"  Header="Date" Width="*"/>

                            </DataGrid.Columns>
                        </DataGrid>

                        <TextBox
                            materialDesign:HintAssist.Hint="Floating Hint" Text="{Binding AnnouncementTitle, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="528,50,348,392" />


                        <ComboBox HorizontalAlignment="Left" Margin="528,108,0,0" VerticalAlignment="Top" Width="120"  SelectedItem="{Binding SelectedRecipient}" >
                            <ComboBoxItem Content="Everyone" HorizontalAlignment="Left" Width="118"/>
                            <ComboBoxItem Content="Donors" HorizontalAlignment="Left" Width="118"/>
                            <ComboBoxItem Content="Requestors" HorizontalAlignment="Left" Width="118"/>
                        </ComboBox>
                        <Button Content="Button" HorizontalAlignment="Left" Margin="528,272,0,0" VerticalAlignment="Top" Width="75" Command="{Binding createAnnouncementCommand}" />
                        <ComboBox HorizontalAlignment="Left" Margin="707,108,0,0" VerticalAlignment="Top" Width="120" SelectedItem="{Binding AnnouncementLanguage}" >
                            <ComboBoxItem Content="ENG" HorizontalAlignment="Left" Width="118"/>
                            <ComboBoxItem Content="CAT" HorizontalAlignment="Left" Width="118"/>
                        </ComboBox>
                        <TextBox HorizontalAlignment="Left" Height="93" Margin="528,161,0,0" TextWrapping="Wrap" Text="{Binding AnnouncementMessage, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" AcceptsReturn="True" VerticalAlignment="Top" Width="299"/>

                        <TextBox
                            Text="{Binding AnnouncementMessage, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            Margin="528,336,242,0"
                            VerticalAlignment="Top"
                            Height="90"
                            AcceptsReturn="True"
                            TextWrapping="Wrap"
                            VerticalScrollBarVisibility="Auto"
                            materialDesign:HintAssist.Hint="Announcement title"
                            />

                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>


        <DockPanel Name="panelTop" VerticalAlignment="Top" LastChildFill="False" Background="#596673" Margin="57,0,0,0" Height="60">
            <TextBlock HorizontalAlignment="Center" FontSize="18"  Width="956" FlowDirection="RightToLeft" TextAlignment="Center" Margin="0,18"><Run Text="{x:Static p:Resources.RobaSegonaMa}"/></TextBlock>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" FlowDirection="RightToLeft" Width="55" >

                <materialDesign:PopupBox PlacementMode="BottomAndAlignRightEdges" StaysOpen="False" Margin="10">
                    <StackPanel Width="150">
                        <Button Width="150" >
                            <StackPanel>
                                <Image Width="auto" Source="pack://siteoforigin:,,,/CustomResources/britishFlag.png" />


                            </StackPanel>
                        </Button>
                        <Button Width="auto" >
                            <StackPanel>
                                <Image Source="pack://siteoforigin:,,,/CustomResources/carlistFlag.png" />

                            </StackPanel>
                        </Button>
                        <Button Width="auto" >
                            <StackPanel>
                                <Image Source="pack://siteoforigin:,,,/CustomResources/catFlag.png" />

                            </StackPanel>
                        </Button>
                        <Button Content="Export data" Command="{Binding exportDataCommand}"/>
                        <Separator/>
                        <Button Content="Exit"/>
                    </StackPanel>
                </materialDesign:PopupBox>
            </StackPanel>


        </DockPanel>
        <DockPanel Name="panelLeft" HorizontalAlignment="Left" Height="569" LastChildFill="False" VerticalAlignment="Top" Width="57" Background="SlateGray">

            <StackPanel >
                <Grid Height="60" Background="#596673" RenderTransformOrigin="0.5,0.5">
                    <Grid.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Grid.RenderTransform>
                    <Button x:Name="ButtonOpenMenu" Height="60" Width="50" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Top"  Background="{x:Null}" BorderBrush="{x:Null}" Foreground="AntiqueWhite" Click="ButtonOpenMenu_Click"
                            >
                        <materialDesign:PackIcon Kind="Menu" Width="25" Height="25"/>
                    </Button>
                    <Button x:Name="ButtonCloseMenu" Visibility="Collapsed" Height="60" Width="50" Margin="5" HorizontalAlignment="Right" VerticalAlignment="Top" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="AntiqueWhite" Click="ButtonCloseMenu_Click">
                        <materialDesign:PackIcon Kind="ArrowLeft" Width="25" Height="25"/>
                    </Button>

                </Grid>
                <ListView x:Name="ListViewMenu" Foreground="AntiqueWhite" Background="SlateGray" ScrollViewer.HorizontalScrollBarVisibility="Disabled" BorderBrush="{x:Null}" Margin="0,25,0,0">
                    <ListViewItem x:Name="itemWarehouses" Height="60">
                        <Button Foreground="AntiqueWhite" Background="SlateGray" BorderBrush="Transparent" Command="{Binding requestorReqClickCommand}" >
                            <StackPanel Orientation="Horizontal"  >
                                <materialDesign:PackIcon Kind="Account" Height="25" Width="25" Margin="10"/>
                                <TextBlock Text="Users" VerticalAlignment="Center" Margin="20 10"/>
                            </StackPanel>
                        </Button>
                    </ListViewItem>
                    <ListViewItem x:Name="itemUsers" Height="60" >
                        <Button Foreground="AntiqueWhite" Background="SlateGray" BorderBrush="Transparent" Command="{Binding usersClickCommand}" >
                            <StackPanel Orientation="Horizontal"  >
                                <materialDesign:PackIcon Kind="Account" Height="25" Width="25" Margin="10"/>
                                <TextBlock Text="Warehouses" VerticalAlignment="Center" Margin="20 10"/>
                            </StackPanel>
                        </Button>
                    </ListViewItem>

                    <ListViewItem x:Name="itemClothes" Height="60"  >
                        <Button Foreground="AntiqueWhite" Background="SlateGray" BorderBrush="Transparent" Command="{Binding clothesClickCommand}" >
                            <StackPanel Orientation="Horizontal"  >
                                <materialDesign:PackIcon  Kind="Tshirtcrew" Height="25" Width="25" Margin="10"/>
                                <TextBlock Text="Clothes"  VerticalAlignment="Center"  Margin="20 10"/>
                            </StackPanel>
                        </Button>
                    </ListViewItem>
                    <ListViewItem x:Name="itemNotifications" Height="60">
                        <Button Foreground="AntiqueWhite" Background="SlateGray" BorderBrush="Transparent" Command="{Binding announcementsClickCommand}" >
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Message" Height="25" Width="25" Margin="10"/>
                                <TextBlock Text="Notifications" VerticalAlignment="Center"  Margin="20 10"/>
                            </StackPanel>
                        </Button>

                    </ListViewItem>
                    <ListViewItem Height="60">
                        <Button
                           HorizontalAlignment="Center"
                            Width="57"
                           Height="60"
                            ToolTip="Test" BorderThickness="0,1,1,1" Padding="4" Background="#00673AB7" BorderBrush="#00673AB7" >

                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Message" Height="25" Width="25" Margin="10"/>
                                <TextBlock Text="Notifications" VerticalAlignment="Center"  Margin="20 10"/>
                            </StackPanel>

                        </Button>



                    </ListViewItem>
                </ListView>
            </StackPanel>

        </DockPanel>
    </Grid>
</Window>
